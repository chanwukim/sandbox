{
  "name": "repo",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "postinstall": "lefthook install",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint --continue -- --fix --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "vitest",
    "test:ci": "vitest run",
    "clean": "turbo run clean && git clean -xdf node_modules .turbo"
  },
  "devDependencies": {
    "@repo/config-vitest": "workspace:*",
    "lefthook": "^1.13.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8",
    "typescript": "catalog:tools",
    "vitest": "catalog:tools"
  }
}
